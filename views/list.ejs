<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="this is an static page, a project for learning web development">
    <meta name="author" content="Arrocito82 Andrea Melissa Monterrosa Morales ">

    <title>ToDo List</title>
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/styles.css" rel="stylesheet">
</head>

<body>

    <div class="box" id="heading">
        <h1>
            <%= weekDay %>
        </h1>
    </div>
    <div class="box">
        <% listOfItems.forEach(element => { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= element %>
                </p>
            </div>
            <% }); %>
                <form action="/" method="POST" class="item">
                    <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
                    <button type="submit">+</button>
                </form>
    </div>



</body>

</html>